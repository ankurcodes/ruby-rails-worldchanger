<article id="tour">

	<div class="container">

		<div class="page-title">
			<%= @document['article.title'] ? @document['article.title'].as_html_safe(link_resolver(@maybe_ref)) : '' %>
			<%= @document['article.lede'] ? @document['article.lede'].as_html_safe(link_resolver(@maybe_ref)) : '' %>
		</div>

		<% @arguments.each_with_index do |argument, index| %>
			<div class="row argument">
				<% if index % 2 != 0 && argument['argument.photo'] %>
					<div class="col-md-6 photo visible-lg visible-md hide-print">
						<%= render partial: "argumentimage", locals: {image: argument['argument.photo'] } %>
					</div>
				<% end %>
				<div class="col-md-6">
					<h2 id="<%= argument.id %>">
						<%= argument['argument.title'] ? argument['argument.title'].as_text : '' %>
					</h2>
					<%= argument['argument.description'] ? argument['argument.description'].as_html_safe(link_resolver(@maybe_ref)) : '' %>
				</div>
				<% if argument['argument.photo'] %>
					<div class="col-md-6 photo <%= " visible-sm visible-xs" if index % 2 != 0 %>">
						<%= render partial: "argumentimage", locals: {image: argument['argument.photo'] } %>
					</div>
				<% end %>
			</div>
		<% end %>
		
	</div>

</article>