<div class="panel-group" id="accordion">
	<% @questions.each_with_index do |question, i| %>
		<div class="panel">
			<div class="panel-heading">
				<h4 class="panel-title">
					<a data-toggle="collapse" data-parent="#accordion" href="#<%= question.id %>" <%= !first_open || i!=0 ? 'class="collapsed"'.html_safe : '' %>>
						<%= question['faq.question'] ? question['faq.question'].as_text : '' %>
						<span class="accordion-arrow down">&#9660;</span><span class="accordion-arrow up">&#9650;</span>
					</a>
				</h4>
			</div>
			<div id="<%= question.id %>" class="panel-collapse collapse<%= first_open && i==0 ? ' in' : '' %>">
				<div class="panel-body">
					<%= question['faq.answer'] ? question['faq.answer'].as_html_safe(link_resolver(@maybe_ref)) : '' %>
				</div>
			</div>

		</div>
	<% end %>
</div>
