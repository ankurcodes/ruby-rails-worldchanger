<article id="homepage">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
      
      <%= @document['homepage.headline'] ? @document['homepage.headline'].as_html_safe(link_resolver(@maybe_ref)) : '' %>

      <%= @document['homepage.description'] ? @document['homepage.description'].as_html_safe(link_resolver(@maybe_ref)) : '' %>

      <p><%= link_to "#{@document['homepage.cta_label'] ? @document['homepage.cta_label'].as_text : ''} »", tour_path(ref: @maybe_ref), :class => "btn btn-primary btn-lg", :role => "button" %></p>

    </div>
  </div>


  <div class="container section-title">
    <%= @document['homepage.title_user_friendly'].as_html_safe(link_resolver(@maybe_ref)) %>
  </div>

  <div class="container">
    <div class="row">
      <% @user_friendly_arguments.each do |argument| %>
        <div class="col-md-4">
          <p class="argument-image"><%= argument['argument.icon'] && argument['argument.icon'].get_view('medium') ? argument['argument.icon'].get_view('medium').as_html_safe(link_resolver(@maybe_ref)) : '' %></p>
          <h3><%= argument['argument.catcher_title'] ? argument['argument.catcher_title'].as_text : '' %></h3>
          <%= argument['argument.catcher_description'] ? argument['argument.catcher_description'].as_html_safe(link_resolver(@maybe_ref)) : '' %>
        </div>
      <% end %>
    </div>
  </div>


  <div class="container section-title">
    <%= @document['document.title_design'] ? @document['document.title_design'].as_html_safe(link_resolver(@maybe_ref)) : '' %>
  </div>

  <div class="container">
    <div class="row">
      <% @design_arguments.each do |argument| %>
        <div class="col-md-4">
          <p class="argument-image"><%= argument['argument.icon'] && argument['argument.icon'].get_view('medium') ? argument['argument.icon'].get_view('medium').as_html_safe(link_resolver(@maybe_ref)) : '' %></p>
          <h3><%= argument['argument.catcher_title'] ? argument['argument.catcher_title'].as_text : '' %></h3>
          <%= argument['argument.catcher_description'] ? argument['argument.catcher_description'].as_html_safe(link_resolver(@maybe_ref)) : '' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="container">
    <div class="well" id="pricewell">
      <p><%= @document['homepage.pricing_label'] ? @document['homepage.pricing_label'].as_text : '' %> <strong>$<%= @minimum_price %>/mo</strong></p>
      <p><%= link_to "#{@document['homepage.pricing_button_label'] ? @document['homepage.pricing_button_label'].as_text : ''} »", pricing_path(ref: @maybe_ref), :class => "btn btn-primary", :role => "button" %></p>
    </div>
  </div>

  <div class="container">
    <%= @document['homepage.title_faq'] ? @document['homepage.title_faq'].as_html_safe(link_resolver(@ref)) : '' %>
    <div class="row">
      <% @questions.each do |question| %>
        <div class="col-md-3">
          <h4><%= question['faq.question'] ? question['faq.question'].as_text : '' %></h4>
          <%= question['faq.short_answer'] ? question['faq.short_answer'].as_html_safe(link_resolver(@maybe_ref)) : '' %>
          <%= link_to "#{question['faq.link_label'] ? question['faq.link_label'].as_text : ''} »", link_resolver(@maybe_ref).link_to(question) %>
        </div>
      <% end %>
    </div>
  </div>

</article>