<article id="homepage">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
      
      <%= @document.fragments["headline"].as_html(link_resolver(@ref)).html_safe %>

      <%= @document.fragments["description"].as_html(link_resolver(@ref)).html_safe %>

      <p><%= link_to @document.fragments["cta_label"].value + " »", tour_path, :class => "btn btn-primary btn-lg", :role => "button" %></p>

    </div>
  </div>


  <div class="container section-title">
    <%= @document.fragments["title_user_friendly"].as_html(link_resolver(@ref)).html_safe %>
  </div>

  <div class="container">
    <div class="row">
      <% @user_friendly_arguments.each do |argument| %>
        <div class="col-md-4">
          <p class="argument-image"><%= argument.fragments["icon"].get_view('medium').as_html(link_resolver(@ref)).html_safe %></p>
          <h3><%= argument.fragments["catcher_title"].blocks[0].text %></h3>
          <%= argument.fragments["catcher_description"].as_html(link_resolver(@ref)).html_safe %>
        </div>
      <% end %>
    </div>
  </div>


  <div class="container section-title">
    <%= @document.fragments["title_design"].as_html(link_resolver(@ref)).html_safe %>
  </div>

  <div class="container">
    <div class="row">
      <% @design_arguments.each do |argument| %>
        <div class="col-md-4">
          <p class="argument-image"><%= argument.fragments["icon"].get_view('medium').as_html(link_resolver(@ref)).html_safe %></p>
          <h3><%= argument.fragments["catcher_title"].blocks[0].text %></h3>
          <%= argument.fragments["catcher_description"].as_html(link_resolver(@ref)).html_safe %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="container">
    <div class="well" id="pricewell">
      <p>We have plans from <strong>$<%= @minimum_price %>/mo</strong></p>
      <p><%= link_to "Check them out »", pricing_path, :class => "btn btn-primary", :role => "button" %></p>
    </div>
  </div>

  <div class="container">
    <h2>Some usual questions we get</h2>
    <div class="row">
      <% @questions.each do |question| %>
        <div class="col-md-3">
          <h4><%= question.fragments['question'].blocks[0].text %></h4>
          <%= question.fragments["short_answer"].as_html(link_resolver(@ref)).html_safe %>
          <%= link_to "See more »", link_resolver(@ref).link_to(Prismic::Fragments::DocumentLink.new(question.id, question.type, question.tags, question.slug, false)) %>
        </div>
      <% end %>
    </div>
  </div>

</article>